int main() 
{
    int choice;

    // Display the menu and ask for a choice
    cout << "Choose a question (1-5): ";
    cin >> choice;

    // Call the appropriate function based on user input
    switch (choice) 
    {
        case 1:
            questionOne();
            break;
        case 2:
            questionTwo();
            break;
        case 3:
            questionThree();
            break;
        case 4:
            questionFour();
            break;
        case 5:
            questionFive();
            break;
        default:
            cout << "Invalid choice! Please choose a number between 1 and 5." << endl;
            break;
    }

    return 0;
}